<div class="container mt-5 border rounded bg-light">

  <h1 class="text-center mt-3 mb-3"> Mascotas de <%= @client.name%> </h1>
  <%= link_to 'Nueva Mascota', new_client_pet_path, class:"btn btn-success"  %>

  <table class="table border mt-3">
    <thead class="table-info text-center">
      <tr>
        <th>Nombre</th>
        <th>Raza</th>
        <th>Fecha Nacimiento</th>
        <th>Visitas</th>
        <th>Historial</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody class="text-center">
        <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.race %></td>
          <td><%= pet.birthdate %></td>
          <td><%= pet.history_count %></td>
          <td>
              <% pet.pet_histories.each do |pet_history| %>
                <span><%= pet_history.description %></span> => <span><%= pet_history.created_at %></span><hr>
              <% end %>
          </td>
          <td><%= link_to '<i class="far fa-eye"></i>'.html_safe, client_pet_path(@client, pet), class:"btn btn-primary" %></td>
          <td><%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_client_pet_path(@client, pet), class:"btn btn-warning" %></td>
          <td><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, client_pet_url(@client, pet), method: :delete, data: { confirm: 'Estas seguro?' }, class:"btn btn-danger" %></td>        
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3 mb-3">
    <%= link_to 'Volver', client_path(@client), class:"btn btn-dark" %>
  </div>
</div>