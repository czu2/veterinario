<div class="container mt-5 border rounded bg-light mb-5">

  <h1 class="text-center mt-3 mb-3">Consultas de "<%= @pet.name%>"</h1>
  <%= link_to 'Nueva Consulta', new_client_pet_pet_history_path, class:"btn btn-success"  %>

  <table class="table border mt-3">
    <thead class="table-info text-center">
      <tr>
        <th>Peso</th>
        <th>Altura</th>
        <th>Descripci√≥n</th>        
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody class="text-center">
        <% @pet_histories.each do |pet_history| %>
        <tr>
          <td><%= pet_history.weight %></td>
          <td><%= pet_history.heigth %></td>
          <td><%= pet_history.description %></td>          
          <td><%= link_to '<i class="far fa-eye"></i>'.html_safe, client_pet_pet_history_path(@client, @pet, pet_history), class:"btn btn-primary" %></td>
          <td><%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_client_pet_pet_history_path(@client, @pet, pet_history), class:"btn btn-warning" %></td>
          <td><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, client_pet_pet_history_url(@client, @pet, pet_history), method: :delete, data: { confirm: 'Estas seguro?' }, class:"btn btn-danger" %></td>        
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3 mb-3">
    <%= link_to 'Volver', client_pet_path(@client, @pet), class:"btn btn-dark" %>
  </div>
</div>