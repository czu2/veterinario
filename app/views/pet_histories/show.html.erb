<div class="container mt-5 border rounded bg-light">
    <h1 class="text-center mt-3 mb-3">Detalle Consulta de "<%= @pet.name%>"</h1>

    <div class="container mt-3 p-3 border">
      <p>
        <strong>PESO:</strong>
        <%= @pet_history.weight %>
      </p>

      <p>
        <strong>ALTURA:</strong>
        <%= @pet_history.heigth %>
      </p>

      <p>
        <strong>DESCRIPCION:</strong>
        <%= @pet_history.description %>
      </p>

      <p>
        <strong>MASCOTA:</strong>
        <%= @pet_history.pet %>
      </p>

      <%= link_to 'Editar Consulta', edit_client_pet_pet_history_path(@client, @pet, @pet_history), class:"btn btn-warning" %>
    </div>

    <div class="mt-3 mb-3">
      <%= link_to 'Volver', client_pet_pet_histories_path, class:"btn btn-dark" %>
    </div>
    
</div>