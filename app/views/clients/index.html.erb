<div class="container mt-5 border rounded bg-light">

  <h1 class="text-center mt-5">CLIENTES</h1>

  <%= link_to 'Nuevo Cliente', new_client_path, class:"btn btn-success"  %>

  <table class="table border mt-3">
    <thead class="text-center table-info">
      <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Tel√©fono</th>
        <th>Mascotas</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody class="text-center">
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.email %></td>
          <td><%= client.phone %></td>
          <td><%= client.count_pet %></td>
          <td><%= link_to '<i class="far fa-eye"></i>'.html_safe, client, class:"btn btn-primary" %></td>
          <td><%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_client_path(client), class:"btn btn-warning" %></td>
          <td><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, client, method: :delete, data: { confirm: 'Estas Seguro?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>